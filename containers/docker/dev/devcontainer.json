// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/go .
{
	"name": "Go",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/go:2-1.24-bookworm",
	"features": {
//		"ghcr.io/stuartleeks/dev-container-features/shell-history:0": {},
//		"ghcr.io/wxw-matt/devcontainer-features/command_runner:0": {},
//		"ghcr.io/devcontainers-extra/features/zsh-plugins:0": {}

		"ghcr.io/duduribeiro/devcontainer-features/neovim:1": {
                   "version": "stable"
		},
		"ghcr.io/nils-geistmann/devcontainers-features/zsh:0": {},
                "ghcr.io/devcontainers-contrib/features/fzf:1": {},
                "ghcr.io/kreemer/features/stow:1": {},
                "ghcr.io/devcontainers-extra/features/ripgrep:1": {},
                "ghcr.io/devcontainers-extra/features/starship:1": {},
                "ghcr.io/duduribeiro/devcontainer-features/tmux:1": {},
		"ghcr.io/larsnieuwenhuizen/features/jqyq:0": {},
		"ghcr.io/brokeyourbike/devcontainer-features/mockery-go:0": {},
		"devwasm.azurecr.io/dev-wasm/dev-wasm-feature/golang-wasi:0": {},
		"ghcr.io/devcontainers/features/docker-in-docker:2": {}
	},
	"extensions": [
		"golang.Go",
	]

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "go version",

	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
